<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ihotelreport.AreaHeaderView2">
    <ContentView.Content>
        <Grid BackgroundColor="#FF9900">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width= "1*"/>
                <ColumnDefinition Width= "3*"/>

                <ColumnDefinition Width= "3*"/>
                <ColumnDefinition Width= "3*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0"  Grid.ColumnSpan="1"/>
            <Label Grid.Column="1" Text="Agency" TextColor="Black"
				HorizontalTextAlignment="Start" Margin="0,0,0,0"/>

            <Label Grid.Column="2" Text="Night" TextColor="Black"
				HorizontalTextAlignment="End"/>

            <Label Grid.Column="3" Text="RoomRevenue%" TextColor="Black"
				HorizontalTextAlignment="End" Margin="0,0,10,0"/>
        </Grid>

    </ContentView.Content>
</ContentView>
